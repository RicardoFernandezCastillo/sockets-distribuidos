<Window x:Class="Sockets_Servidor.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:Sockets_Servidor.credenciales"
        mc:Ignorable="d"
        Title="Log"
        WindowStartupLocation="CenterScreen"
        Height="600"
        Width="1200"
        Background="White">
    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#2B2A2A" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>



        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,493" Width="874">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="80" Width="864">
                <Image Source="/image/Logo.png" Height="74" Width="87" />
                <StackPanel Margin="10,0,0,0" Height="69">
                    <TextBlock Text="Monitor Nacional de Almacenamiento" FontSize="24" FontWeight="Bold" Foreground="White" />
                    <TextBlock Text="Total: 74 TB - Usado: 61 GB - Libre: 13 GB" FontSize="14" Foreground="White" />
                    <TextBlock Text="Reportando 7 de 9" FontSize="12" Foreground="White" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Grid Background="Cyan" Opacity="0.3"/>

        <Grid Margin="20,91,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="335*"/>
                <ColumnDefinition Width="309*"/>
                <ColumnDefinition Width="516*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de Datos -->
            <StackPanel Grid.Column="0" Margin="10,10,10,10">
                <Image Height="137" Width="130" Source="/image/Image1.png" Stretch="Fill" />
                <TextBlock x:Name="lblServerInfo" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,10,0,10"/>
                <TextBlock x:Name="lblDepartamento" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock x:Name="txb_3" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock x:Name="txb_4" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock x:Name="txb_5" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Lista de Mensajes -->
            <Border Grid.Column="1" Margin="10,0,10,0" Padding="10" CornerRadius="10" Background="White" BorderBrush="Black" BorderThickness="1" Height="394" VerticalAlignment="Center">
                <ListBox x:Name="lstMensajes" FontSize="14" Background="White" BorderThickness="0" Margin="-1,0,0,-1"/>
            </Border>

            <!-- Histograma -->
            <Border Grid.Column="2" Margin="10,77,0,112" Padding="10" CornerRadius="10" Background="White" BorderBrush="Black" BorderThickness="1">
                <lvc:CartesianChart x:Name="usageChart" Margin="0,0,0,-1">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Title="Uso" Stroke="Blue" Fill="LightBlue" StrokeThickness="2" PointGeometrySize="8" Values="{Binding UsoValores}"/>
                    </lvc:CartesianChart.Series>
                </lvc:CartesianChart>
            </Border>

            <!-- Botón de Volver -->
            <Button Content="Volver" Width="76" Height="27" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#3b5998" Foreground="White" FontWeight="Bold" BorderBrush="Black" BorderThickness="1" Click="VolverButton_Click" Margin="0,0,192,26"/>
        </Grid>
    </Grid>
</Window>
